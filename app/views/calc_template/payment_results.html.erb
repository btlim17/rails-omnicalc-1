<!--/views/payment_results.erb-->
<h1>Payment Results</h1>
<dl>
  <dt>APR<dt>
  <dd><%= @apr.round(4).to_fs(:percentage) %></dd>
  <dt>Number of years<dt>
  <dd><%= @years %></dd>
  <dt>Principal<dt>
  <dd><%= @principal.to_fs(:currency) %></dd>
  <dt>Payment<dt>
  <dd><%= @payment.to_fs(:currency) %></dd>
  <p><a href = "/payment/new">Calculate another payment</a></p>
</dl>
